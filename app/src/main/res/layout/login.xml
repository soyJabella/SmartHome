<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uno"
    android:gravity="center">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="675dp"
        android:background="@drawable/cartas"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="280dp"
            android:layout_height="289dp"
            android:contentDescription="TODO"
            android:visibility="visible"
            app:srcCompat="@drawable/smart_home_logo"
            android:background="@mipmap/smart_home_logo"
            />

        <TextView
            android:id="@+id/tIpServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/trade_winds"
            android:text="Servidor:"
            android:textAlignment="center"
            android:textColor="#9e9e9e" />

        <EditText
            android:id="@+id/iIpServidor"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cartas"
            android:ems="10"
            android:textColorHint="#9e9e9e"
            android:fontFamily="@font/trade_winds"
            android:gravity="center"
            android:hint="Ej... 192.168.1.23"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/bConectar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/tres"
            android:fontFamily="@font/trade_winds"
            android:text="Conectar"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/barEspera"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>
</LinearLayout>